@model TP.Site.Models.Organization.EmployeeModel

@{
    ViewBag.Title = Model.PageTitle;
    ViewBag.SubTitle = Model.PageSubTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body detail-info">
                @Html.HiddenFor(u => u.Id)
                <h1>
                    @Model.Name <small>@Model.JobNumber</small>
                    @if (@Model.LeaveDate.HasValue)
                    {
                        <span class="pull-right label label-danger">@Model.StatusName</span>
                    }
                    else
                    {
                        <span class="pull-right label label-info">@Model.StatusName</span>
                    }

                </h1>
                <div class="row">
                    <div class="detail-row">
                        <p><span>任职部门:</span>@Model.CurrentDepartment</p>
                    </div>
                    <div class="detail-row">
                        <p><span>所属门店:</span>@Model.CurrentStrore</p>
                    </div>
                    <div class="detail-row">
                        @if (@Model.Sex)
                        {
                            <p><span>员工性别:</span>男</p>
                        }
                        else
                        {
                            <p><span>员工性别:</span>女</p>
                        }
                        </p>
                    </div>
                    <div class="detail-row">
                        <p><span>员工年龄:</span>@Model.Age</p>
                    </div>
                    <div class="detail-row">
                        <p><span>证件号码:</span>@Model.CredentialsNum</p>
                    </div>
                    <div class="detail-row">
                        <p><span>手机号码:</span>@Model.MobilePhone</p>
                    </div>
                    <div class="detail-row">
                        <p><span>入职时间:</span>@Model.EntryDate.ToLongDateString()</p>
                    </div>
                    <div class="detail-row">
                        <p><span>员工状态:</span>@Model.StatusName</p>
                    </div>
                  
                </div>
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-6 col-sm-6">
                            <a class="btn btn-default  pull-left" href="~/Employee/Index"><i class="fa fa-reply fa-fw"></i>返 回</a>
                            <a href="~/Employee/Edit/@Model.Id" class="btn btn-primary pull-right"><i class="fa fa-edit"></i>编 辑</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

