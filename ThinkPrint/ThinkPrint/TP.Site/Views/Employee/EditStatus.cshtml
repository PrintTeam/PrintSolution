@model TP.Site.Models.Organization.EmployeeStatusModel

@{
    ViewBag.Title = Model.PageTitle;
    ViewBag.SubTitle = Model.PageSubTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("EditStatus", "Employee", FormMethod.Post, new { id = "create-form", @class = "form-horizontal", role = "form" }))
        {
            <div class="panel panel-info">
                @Html.Partial("_Notifications")
                <div class="panel-body detail-info">
                    @Html.HiddenFor(u => u.Id)
                    <h1>
                        @Model.Name
                        @if (@Model.LeaveDate.HasValue)
                        {
                            <span class="pull-right label label-danger">@Model.StatusName</span>
                        }
                        else
                        {
                            <span class="pull-right label label-info">@Model.StatusName</span>
                        }

                    </h1>
                    <div class="form-group">
                        <label for="txtStatus" class="control-label col-lg-2">员工状态</label>
                        <div class="col-lg-6">
                            @Html.DropDownListFor(i => i.Status, Model.StatusList, new { @class = "form-control", id = "selectStatus" })
                        </div>
                        <div class="col-lg-4">

                        </div>
                    </div>
                    <div class="form-group" id="panelLeave">
                        <label for="txtLeaveDate" class="control-label col-lg-2">离职时间</label>
                        <div class="col-lg-6">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.LeaveDate, new { @class = "form-control", placeholder = "员工的离职时间", id = "txtLeaveDate", size = "16", @readonly = "" })
                                <div class="input-group-btn">
                                    <button type="button" id="btnLeaveDate" class="btn btn-warning date-set">
                                        <i class="fa fa-calendar-o"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-6 col-sm-6">
                            <a class="btn btn-default  pull-left" href="~/Employee/Index"><i class="fa fa-reply fa-fw"></i>返 回</a>
                            <button class="btn btn-primary pull-right" type="submit"><i class="fa fa-floppy-o fa-fw"></i>保 存</button>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section subScripts
{
    @Scripts.Render("~/bundles/employee-status")
}




