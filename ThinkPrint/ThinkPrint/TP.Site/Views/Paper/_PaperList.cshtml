@model TP.Site.Models.Paper.PaperListModel

@using Webdiyer.WebControls.Mvc
@{
    var j = 1;
}
<div class="row">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    序号
                </th>               
                <th>
                    名称
                </th>                
                <th>
                    助记码
                </th>
                <th>
                    克重
                </th>
                <th>
                    描述
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ViewList)
            {
                <tr>
                    <td>
                        @j.ToString()
                    </td>                    
                    <td>
                        @item.Name
                    </td>                    
                    <td>
                        @item.MnemonicCode
                    </td>
                    <td>
                        @item.Weight
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td class="table-action">
                        <a href="~/Paper/Edit/@item.PaperId" class="btn btn-primary btn-xs" data-toggle="tooltip" data-placement="left" title="编辑"><i class="fa fa-edit"></i></a>
                        <button id="@item.PaperId" type="button" class="btn btn-danger btn-xs" data-toggle="tooltip" data-placement="top" title="删除"><i class="fa fa-trash-o "></i></button>
                    </td>
                </tr>
                j++;
            }

        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-xs-12 col-md-6">
        <div class="dataTable_info">
            共 @Model.ViewList.TotalPageCount 页 @Model.ViewList.TotalItemCount
            条记录，当前为第 @Model.ViewList.CurrentPageIndex 页
        </div>
    </div>
    <div class="col-xs-12 col-md-6">
        @Html.Pager(Model.ViewList, new PagerOptions { PageIndexParameterName = "pageIndex", ShowPageIndexBox = false, ShowGoButton = false, CurrentPagerItemWrapperFormatString = "<span class=\"current\">{0}</span>" }, new { id = "badoopager", @class = "pull-right" })
    </div>
</div>
