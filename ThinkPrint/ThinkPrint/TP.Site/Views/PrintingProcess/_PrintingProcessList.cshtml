@model TP.Site.Models.PrintingProcess.PrintingProcessListModel

@using Webdiyer.WebControls.Mvc
@{
    var j = 1;
}
<div class="row">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    序号
                </th>
                <th>
                    MachineId
                </th>
                <th>
                    工序类别
                </th>
                <th>
                    名称
                </th>
                <th>
                    简称
                </th>
                <th>
                    助记码
                </th>
                <th>
                    组成编码
                </th>
                <th>
                    面
                </th>
                <th>
                    色彩类别
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ViewList)
            {
                <tr>
                    <td>
                        @j.ToString()
                    </td>
                    <td>
                        @item.MachineId
                    </td>
                    <td>
                        @item.ProcessType
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.ShortName
                    </td>
                    <td>
                        @item.MnemonicCode
                    </td>
                    <td>
                        @item.PartsAttributeCode
                    </td>
                    <td>
                        @item.SideProperty
                    </td>
                    <td>
                        @item.ColorType
                    </td>
                    <td class="table-action">
                        <a href="~/PrintingProcess/Edit/@item.PrintingProcessId" class="btn btn-primary btn-xs" data-toggle="tooltip" data-placement="left" title="编辑"><i class="fa fa-edit"></i></a>
                        <button id="@item.PrintingProcessId" type="button" class="btn btn-danger btn-xs" data-toggle="tooltip" data-placement="top" title="删除"><i class="fa fa-trash-o "></i></button>
                    </td>
                </tr>
                j++;
            }

        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-xs-12 col-md-6">
        <div class="dataTable_info">
            共 @Model.ViewList.TotalPageCount 页 @Model.ViewList.TotalItemCount
            条记录，当前为第 @Model.ViewList.CurrentPageIndex 页
        </div>
    </div>
    <div class="col-xs-12 col-md-6">
        @Html.Pager(Model.ViewList, new PagerOptions { PageIndexParameterName = "pageIndex", ShowPageIndexBox = false, ShowGoButton = false, CurrentPagerItemWrapperFormatString = "<span class=\"current\">{0}</span>" }, new { id = "badoopager", @class = "pull-right" })
    </div>
</div>
